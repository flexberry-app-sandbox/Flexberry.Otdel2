<h3 class="ui header">{{t "forms.i-i-s-otdel2-проверка-кр-кл-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-otdel2-проверка-кр-кл-e.дата-caption"}}</label>
    {{flexberry-simpledatetime
      type="date"
      readonly=readonly
      value=model.дата
      class=(if (v-get validationModel "дата" "isInvalid") "error")
      data-test-i-i-s-otdel2-проверка-кр-кл-e-дата=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "дата" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.доходыВМес
      class=(if (v-get validationModel "доходыВМес" "isInvalid") "error")
      label=(t "forms.i-i-s-otdel2-проверка-кр-кл-e.доходыВМес-caption")
      data-test-i-i-s-otdel2-проверка-кр-кл-e-доходыВМес=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "доходыВМес" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.суммаЕжКр
      class=(if (v-get validationModel "суммаЕжКр" "isInvalid") "error")
      label=(t "forms.i-i-s-otdel2-проверка-кр-кл-e.суммаЕжКр-caption")
      data-test-i-i-s-otdel2-проверка-кр-кл-e-суммаЕжКр=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "суммаЕжКр" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-otdel2-проверка-кр-кл-e.наличЗал-caption"}}</label>
    {{flexberry-checkbox
      readonly=readonly
      value=model.наличЗал
      class=(if (v-get validationModel "наличЗал" "isInvalid") "error")
      data-test-i-i-s-otdel2-проверка-кр-кл-e-наличЗал=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "наличЗал" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-otdel2-проверка-кр-кл-e.наличПоруч-caption"}}</label>
    {{flexberry-checkbox
      readonly=readonly
      value=model.наличПоруч
      class=(if (v-get validationModel "наличПоруч" "isInvalid") "error")
      data-test-i-i-s-otdel2-проверка-кр-кл-e-наличПоруч=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "наличПоруч" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-otdel2-проверка-кр-кл-e.одобрение-caption"}}</label>
    {{flexberry-checkbox
      readonly=readonly
      value=model.одобрение
      class=(if (v-get validationModel "одобрение" "isInvalid") "error")
      data-test-i-i-s-otdel2-проверка-кр-кл-e-одобрение=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "одобрение" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-otdel2-проверка-кр-кл-e.организация-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.организация
      displayAttributeName="наименование"
      autocomplete=true
      relationName="организация"
      projection="ОрганизацияL"
      title=(t "forms.i-i-s-otdel2-проверка-кр-кл-e.организация-caption")
      readonly=readonly
      componentName="организацияLookup"
      class=(if (v-get validationModel "организация" "isInvalid") "error")
      data-test-i-i-s-otdel2-проверка-кр-кл-e-организация=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "организация" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-otdel2-проверка-кр-кл-e.заклКрДог-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.заклКрДог
      displayAttributeName="цельКр"
      autocomplete=true
      relationName="заклКрДог"
      projection="ЗаклКрДогL"
      title=(t "forms.i-i-s-otdel2-проверка-кр-кл-e.заклКрДог-caption")
      readonly=readonly
      componentName="заклКрДогLookup"
      class=(if (v-get validationModel "заклКрДог" "isInvalid") "error")
      data-test-i-i-s-otdel2-проверка-кр-кл-e-заклКрДог=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "заклКрДог" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-otdel2-проверка-кр-кл-e.клиенты-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.клиенты
      displayAttributeName="фИОКлиента"
      autocomplete=true
      relationName="клиенты"
      projection="КлиентыL"
      title=(t "forms.i-i-s-otdel2-проверка-кр-кл-e.клиенты-caption")
      readonly=readonly
      componentName="клиентыLookup"
      class=(if (v-get validationModel "клиенты" "isInvalid") "error")
      data-test-i-i-s-otdel2-проверка-кр-кл-e-клиенты=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "клиенты" "message")}}
  </div>
</form>
